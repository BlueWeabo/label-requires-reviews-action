{
  "name": "label-requires-reviews-action",
  "version": "0.0.1",
  "description": "Require a number of reviews for a certain label",
  "main": "build/entrypoint.js",
  "scripts": {
    "start": "node ./build/entrypoint.js",
    "test": "jest --collect-coverage",
    "test:watch": "jest --watchAll",
    "build:main": "tsc -p tsconfig.json",
    "lint-staged": "lint-staged",
    "prettier": "prettier",
    "prettier:fix": "npm run prettier -- --write 'src/**/*.ts'"
  },
  "dependencies": {
    "actions-toolkit": "^5.0.0"
  },
  "devDependencies": {
    "@octokit/rest": "^18.0.0",
    "@types/jest": "^26.0.3",
    "awesome-typescript-loader": "^5.2.1",
    "babel-jest": "^26.1.0",
    "eslint": "^7.3.1",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "prettier-eslint": "^11.0.0",
    "signale": "^1.4.0",
    "source-map-loader": "^1.0.1",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.5"
  },
  "lint-staged": {
    "src/**/*.(.ts)": [
      "eslint --ext .js --ext .tsx --fix --max-warnings 0",
      "npm run prettier -- --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
